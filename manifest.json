{
    "manifest_version": 3,
    "name": "SecurePass Generator",
    "version": "1.2.2",
    "description": "Generate cryptographically secure passwords (random, memorable, PIN) locally with customizable options and a privacy-first design",
    "permissions": [
        "clipboardWrite",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Generate Secure Password"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "run_at": "document_end"
        }
    ]
}
